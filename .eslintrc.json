{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-console" : "off",
        "no-plusplus" : "off",
        "class-methods-use-this" : "off",
        "no-unused-vars" : "off",
        "no-undef" : "off"
    }
}